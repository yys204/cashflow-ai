// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "sqlite"
}

// 定义一个 "模型" (Model)，这就相当于数据库里的一张表
model Transaction {
  id        String   @id @default(cuid()) // 自动生成唯一ID
  label     String // 比如 "买咖啡"
  amount    Int // 金额 (建议存分为单位，避免小数精度问题，但今天先存元)
  date      DateTime @default(now()) // 默认当前时间
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
